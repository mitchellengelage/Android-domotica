<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.javahelps.navigationdrawer.SettingsFragment">


    <ImageButton
        android:id="@+id/buttonPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_power"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/buttonChannel1" />

    <ImageButton
        android:id="@+id/buttonSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_source"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_alignTop="@+id/buttonPower"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/buttonVolumeUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_volume_up"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_above="@+id/buttonVolumeDown"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:id="@+id/buttonVolumeDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_volume_down"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_above="@+id/buttonChannel4"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="52dp" />

    <ImageButton
        android:id="@+id/buttonChannelUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_channel_up"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_above="@+id/buttonVolumeDown"
        android:layout_toStartOf="@+id/buttonChannel1" />

    <ImageButton
        android:id="@+id/buttonChannelDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_channel_down"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_above="@+id/buttonChannelUp"
        android:layout_toLeftOf="@+id/buttonChannel1" />
    <ImageButton
        android:id="@+id/buttonMute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_mute"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_above="@+id/buttonVolumeUp"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:id="@+id/buttonChannel0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_c0"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_marginBottom="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/buttonChannel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_c1"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"

        android:layout_alignTop="@+id/buttonChannel0"
        android:layout_toEndOf="@+id/buttonChannel0" />

    <ImageButton
        android:id="@+id/buttonChannel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_c2"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_alignTop="@+id/buttonChannel1"
        android:layout_toEndOf="@+id/buttonChannel1" />

    <ImageButton
        android:id="@+id/buttonChannel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_c3"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_alignTop="@+id/buttonChannel2"
        android:layout_toEndOf="@+id/buttonChannel2" />
    <ImageButton
        android:id="@+id/buttonChannel4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_c4"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_alignTop="@+id/buttonChannel3"
        android:layout_toEndOf="@+id/buttonChannel3" />

    <ImageButton
        android:id="@+id/buttonChannel5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_c5"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_below="@+id/buttonChannel1"
        android:layout_toStartOf="@+id/buttonChannel1" />

    <ImageButton
        android:id="@+id/buttonChannel6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_c6"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_below="@+id/buttonChannel1"
        android:layout_alignStart="@+id/buttonChannel1" />

    <ImageButton
        android:id="@+id/buttonChannel7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_c7"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_below="@+id/buttonChannel1"
        android:layout_toEndOf="@+id/buttonChannel1" />

    <ImageButton
        android:id="@+id/buttonChannel8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_c8"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_below="@+id/buttonChannel2"
        android:layout_toEndOf="@+id/buttonChannel7" />
    <ImageButton
        android:id="@+id/buttonChannel9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_c9"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_below="@+id/buttonChannel3"
        android:layout_toEndOf="@+id/buttonChannel8" />

    <ImageButton
        android:id="@+id/buttonArrowUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_arrow_up"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_above="@+id/buttonArrowRight"
        android:layout_centerHorizontal="true" />

    <ImageButton
    android:id="@+id/buttonArrowDown"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/image_button_arrow_down"
    android:clickable="true"
    android:onClick="irSend"
    android:background="@null"
        android:layout_alignTop="@+id/buttonVolumeUp"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/buttonEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_enter"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_below="@+id/buttonArrowUp"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/buttonArrowLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_arrow_left"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_above="@+id/buttonArrowDown"
        android:layout_toStartOf="@+id/buttonArrowDown" />

    <ImageButton
        android:id="@+id/buttonArrowRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_arrow_right"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_alignTop="@+id/buttonArrowLeft"
        android:layout_toEndOf="@+id/buttonChannel3" />

    <ImageButton
        android:id="@+id/buttonMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_menu"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_alignTop="@+id/buttonSource"
        android:layout_alignStart="@+id/buttonMute" />

    <ImageButton
        android:id="@+id/buttonGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_button_guide"
        android:clickable="true"
        android:onClick="irSend"
        android:background="@null"
        android:layout_alignTop="@+id/buttonMenu"
        android:layout_toEndOf="@+id/buttonArrowRight" />

</RelativeLayout>